html { scroll-behavior: smooth; }
section[id] { scroll-margin-top: var(--nav-h); }
body {
  margin: 0;
  font-family: system-ui, sans-serif;
  scroll-behavior: smooth;
}

nav#mainNavbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  background: transparent;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 2rem;
  z-index: 1000;
  transition: background-color 0.3s ease;
}

nav#mainNavbar a {
  color: white;
  text-decoration: none;
  margin-right: 1rem;
}

nav#mainNavbar .logo a {
  font-size: 2.5rem;
  font-weight: bold;
}

#navLinks {
  display: flex;
  gap: 2rem;
  font-size: 1.25rem;
  font-weight: 700;

}

.nav-right {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-right: 2rem;
}

.contact-btn {
  background: white;
  color: black !important;
  padding: 0.5rem 1rem;
  border-radius: 4px;
  text-decoration: none;
  font-weight: 500;
}

#navToggle {
  display: none;
  background: none;
  border: none;
  font-size: 2rem;
  color: white;
  cursor: pointer;
}

@media (max-width: 768px) {
  #navLinks {
    display: none;
    position: absolute;
    top: 80px;
    left: 0;
    width: 100%;
    flex-direction: column;
    align-items: center;
    background: rgba(0, 0, 0, 0.95);
    padding: 1rem 0;
  }

  #navLinks.show {
    display: flex;
  }

  #navToggle {
    display: block;
  }

  #navLinks a {
    padding: 0.75rem 0;
    font-size: 1.25rem;
  }
}

/* Hero section */
.hero {
  position: relative;
  height: 100vh;
  overflow: hidden;
}

.hero-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 2rem;
}

.hero-content {
  color: white;
  max-width: 800px;
}

.hero-content h1 {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.hero-content p {
  font-size: 1.25rem;
  margin-bottom: 2rem;
}

.hero-button {
  background: white;
  color: black;
  padding: 0.75rem 1.5rem;
  font-weight: bold;
  text-decoration: none;
  border-radius: 4px;
  transition: background 0.3s ease;
}

.hero-button:hover {
  background: #e0e0e0;
}
:root { --nav-h: 80px; }

.hero-split {
  min-height: calc(100vh - var(--nav-h, 80px));
  display: grid;
  grid-template-columns: 1fr 1.1fr; /* left text / right image */
}

.hero-left {
  background: #000;
  color: #fff;
  display: flex;
  align-items: center;
}

.hero-left-inner {
  width: 100%;
  max-width: 780px;
  padding: clamp(2rem, 6vw, 6rem);
}

.hero-left h1 {
  font-weight: 800;
  line-height: 1.1;
  font-size: clamp(2rem, 5vw, 3.25rem);
  margin: 0 0 1rem;
}

.u-underline {
  position: relative;
  display: inline-block;
  padding-bottom: .15em;
  background-image: linear-gradient(currentColor, currentColor);
  background-repeat: no-repeat;
  background-position: 0 100%;
  background-size: 100% .12em;
}

.hero-sub {
  font-size: clamp(1rem, 2.1vw, 1.15rem);
  line-height: 1.7;
  opacity: .95;
  margin: 0 0 2rem;
}

.hero-actions {
  display: flex;
  gap: .75rem;
  flex-wrap: wrap;
}

/* Buttons */
.btn {
  display: inline-block;
  background: #fff;
  color: #000;
  padding: .75rem 1.25rem;
  border-radius: 999px;
  font-weight: 700;
  text-decoration: none;
  transition: transform .15s ease, background .2s ease, color .2s ease;
  border: 2px solid #fff;
}
.btn:hover { transform: translateY(-1px); }
.btn:active { transform: translateY(0); }
.btn.btn-outline {
  background: transparent;
  color: #fff;
}

/* Right side image */
.hero-right img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* Responsive */
@media (max-width: 1024px) {
  .hero-split {
    grid-template-columns: 1fr 1fr;
  }
}
@media (max-width: 768px) {
  .hero-split {
    grid-template-columns: 1fr;
  }
  .hero-right {
    order: 2; /* stack image under text */
    min-height: 40vh;
  }
  .hero-left {
    order: 1;
  }
}

/* Learn More Section */

/* --- Section base shared earlier --- */
/* .section { padding: 5rem 2rem; }  .container { max-width:1200px; margin:0 auto; } */
/* .section-title / .section-lead already defined—reusing them */

.learn-more { 
  background: #f5f6f9; 
  max-height: 60vh;        /* about 60% of screen height */
  display: flex;
  align-items: center;     /* vertical centering of content */
  overflow: hidden;       /* prevent image overflow */
  padding: 4rem 0;
}

.lm-grid {
  display: grid;
  grid-template-columns: 1.1fr 1fr;
  gap: 2rem;
  align-items: center;

  margin: 0 20rem;      /* space from viewport edges */
  width: 100%;
  height: 100%;        /* let grid respect section height */
}

.lm-left .section-title { text-align: left; margin-bottom: 0.75rem; }
.lm-left .section-lead { text-align: left; margin-bottom: 2rem; }

.lm-metrics {
  display: grid;
  grid-template-columns: repeat(2, minmax(220px, 1fr));
  gap: 2rem 3rem;
}

.lm-col { display: grid; gap: 1.25rem; }
.lm-label {
  margin: 0;
  font-size: 1.1rem;
  letter-spacing: 0.01em;
}

.lm-metric { display: grid; gap: 0.4rem; }
.lm-value {
  display: flex; align-items: baseline; gap: 0.35rem;
  font-weight: 800; line-height: 1;
  font-size: clamp(1.75rem, 3.8vw, 2.25rem); /* big numbers */
}
.lm-value .unit { font-weight: 700; font-size: 0.9em; opacity: 0.9; }
.lm-caption { font-size: 0.95rem; opacity: 0.85; }

.lm-right img {
  width: auto;
  height: 60vh;
  max-height: 100%;     /* don’t exceed section height */
  object-fit: contain;  /* show full image */
  border-radius: 20px;
  box-shadow: 0 8px 24px rgba(0,0,0,.08);
}

/* keep anchors from hiding under fixed nav */
#learnMore { scroll-margin-top: var(--nav-h, 80px); }

.lm-left, .lm-right { min-width: 0; }

/* --- Make your current layout responsive without changing your base values --- */

/* prevent weird overflow in grid columns */
.lm-left, .lm-right { min-width: 0; }

/* very wide screens – keep your big margins but start easing them in */
@media (max-width: 1600px) {
  .lm-grid { margin: 0 10rem; }   /* was 20rem */
}

/* large laptops */
@media (max-width: 1280px) {
  .lm-grid { margin: 0 6rem; }
  .lm-right img { height: 52vh; } /* keep image a bit smaller */
}

/* tablets – remove hard height cap so text never gets cramped */
@media (max-width: 1080px) {
  .learn-more { 
    max-height: none;      /* let section grow naturally on smaller screens */
    padding: 3rem 0;
  }
  .lm-grid { 
    grid-template-columns: 1fr; 
    margin: 0 3rem; 
    gap: 1.5rem; 
    height: auto; 
  }

  .lm-right img { 
    width: 100%;
    height: auto;          /* stop forcing 60vh */
    max-height: none;      /* still keep it reasonable */
    object-fit: cover;
  }
}

/* phones – stack, tighter margins */
@media (max-width: 768px) {
  .lm-grid { 
    grid-template-columns: 1fr; 
    margin: 0 1.25rem; 
    gap: 1.25rem; 
  }
  .lm-right { order: 2; }
  .lm-left  { order: 1; }

  /* image fills width nicely when stacked */
  .lm-right img { 
    width: 100%; 
    height: auto; 
    max-height: none; 
    object-fit: cover;     /* nicer single-column look */
    border-radius: 16px;
  }
}

/* tiny phones */
@media (max-width: 420px) {
  .learn-more { padding: 2rem 0; }
  .lm-grid   { margin: 0 1rem; }
}
